{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "prettier",
    "@typescript-eslint"
  ],
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "space-before-function-paren": "off",
    "no-useless-constructor": "off",
    "brace-style": "off"
  }
}