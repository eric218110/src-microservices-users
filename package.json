{
  "name": "src-boilerplate-micro-service",
  "version": "1.0.0",
  "description": "boilerplate for create micro services",
  "main": "dist/index.js",
  "author": "Eric Silva",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:watch:verbose": "jest --passWithNoTests --noStackTrace --runInBand --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "pretest:ci": "rimraf coverage",
    "lint": "eslint --ext .js,.ts --fix .",
    "prepre-push": "rimraf coverage",
    "pre-push": "npm test -- --coverage",
    "preci:coveralls": "npm test -- --coverage",
    "ci:coveralls": "COVERALLS_REPO_TOKEN=LIBzrVOGRyVWp5R3HIyTCmf3tCY98Gqh3 coveralls < coverage/lcov.info",
    "prebuild": "rimraf dist",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node ./dist/main/server/index.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify --clear --quiet ./src/main/server/index.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/node": "^7.16.8",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/preset-env": "^7.16.10",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.0.3",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "husky": "^7.0.0",
    "jest": "^27.4.7",
    "jest-mock-extended": "^2.0.4",
    "lint-staged": "^12.2.1",
    "prettier": "^2.5.1",
    "prisma": "^3.8.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@prisma/client": "3.8.1",
    "dotenv": "^14.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.2",
    "spinnies": "^0.5.1"
  }
}