{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "baseUrl": "src",
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "paths": {
      "@main/*": [
        "./main/*"
      ],
      "@presentation/*": [
        "./presentation/*"
      ],
      "@module/*": [
        "./module/*"
      ],
      "@domain/*": [
        "./domain/*"
      ],
      "@data/*": [
        "./data/*"
      ],
      "@infra/*": [
        "./infra/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": []
}